<div class="ui raised block segment">
  <h1 class="ui dividing header">
    <i class="ui paragraph icon"></i> <div class="content">Paragraph Break</div>
  </h1>
  {{#if isEditing}}
    <div class={{if errorMessage "ui error form" "ui form"}}>
      <div class="ui error message">
        <p>{{errors.staticText}}</p>
      </div>
      <div class={{if errors.staticText "field error required" "field required"}}>
        <label>Paragraph Header</label>
        {{one-way-input value=staticText update=(action (mut staticText))}}
      </div>
      <button class="ui mini teal button" {{action 'saveBlock'}}>Save</button>
      <button class="ui mini button" {{action 'cancelEditing'}}>Cancel</button>
    </div>
  {{else}}
    <label class="mylabel">Paragraph Header</label>
    {{#if model.staticText}}
      <p>{{model.staticText}}</p>
    {{else}}
      <p><em>No Header</em></p>
    {{/if}}
    <p class="">
      <a href='#' {{action 'editBlock'}}>Edit</a> |
      <a href='#' {{action 'deleteConfirm'}}>
        Delete</a>
    </p>
    {{#if deleteMessage}}
      <div class="ui message transition">
        <i class="close icon" {{action 'cancelDelete'}}></i>
        This will delete the entire block. Are you sure?<p><a href='#' {{action 'destroyBlock'}}>Confirm Delete</a></p>
      </div>
    {{/if}}
  {{/if}}
</div>
