
{{#if media.isMobile}}
  <form class="ui inverted form">
    {{#if menuArray}}
      {{#each menuArray as |option|}}
      <div {{action "sendActiveBlock" option.blockID on="mouseEnter"}} {{action "sendActiveBlock" "null" on="mouseLeave"}}>
        <h4 class="ui inverted dividing header">{{option.title}}</h4>
         <div class="field">
          {{#if option.dropdown}}
            {{#ui-dropdown class="selection" selected=option.selectedOption}}
              <div class="default text">Choose Option</div>
              <i class="dropdown icon"></i>
              <div class="menu">
              {{#each option.choices as |choice|}}
                <div class="item" data-value=123 {{action 'updateDropdown' choice}}>
                  {{choice.menuTitle}}
                </div>
              {{/each}}
              </div>
            {{/ui-dropdown}}
          {{/if}}
          {{#if option.checkbox}}
            {{#each option.choices as |choice|}}
              <div {{action 'updateCheckbox' choice}}>{{ui-checkbox label=choice.menuText checked=choice.selected}}</div>
            {{/each}}
          {{/if}}
          {{#if option.toggle}}
            <div {{action 'updateToggle' option}}>{{ui-checkbox label=option.title checked=option.selected}}</div>
          {{/if}}
        </div>
      </div>
      <div class="ui hidden clearing divider"></div>
      {{/each}}
    {{else}}
      <em>No clause options.</em>
    {{/if}}
  </form>
{{else}}
  {{#if menuArray}}
    {{#ui-accordion}}
      {{#each menuArray as |option|}}
        <div {{action "sendActiveBlock" option.blockID on="mouseEnter"}} {{action "sendActiveBlock" "null" on="mouseLeave"}}>
          <div class="title {{if option.openMe "active"}}">
            <i class="dropdown icon"></i>
            {{option.title}}    {{#if option.helpText}}{{ui-popup tagName="i" class="info icon" content=option.helpText}}{{/if}}
          </div>
          <div class="content {{if option.openMe "active"}}">
            {{#if option.dropdown}}
              {{#ui-dropdown class="selection" selected=option.selectedOption}}
                <div class="default text">Choose Option</div>
                <i class="dropdown icon"></i>
                <div class="menu">
                {{#each option.choices as |choice|}}
                  <div class="item" data-value=123 {{action 'updateDropdown' choice}}>
                    {{choice.menuTitle}}
                  </div>
                {{/each}}
                </div>
              {{/ui-dropdown}}
            {{/if}}
            {{#if option.checkbox}}
              {{#each option.choices as |choice|}}
                <div {{action 'updateCheckbox' choice}}>{{ui-checkbox label=choice.menuText checked=choice.selected}}</div>
              {{/each}}
            {{/if}}
            {{#if option.toggle}}
              <div {{action 'updateToggle' option}}>{{ui-checkbox class="slider" label=option.title checked=option.selected}}</div>
            {{/if}}
          </div>
        </div>
      {{/each}}
    {{/ui-accordion}}
  {{else}}
    <em>No clause options</em>
  {{/if}}
{{/if}}
