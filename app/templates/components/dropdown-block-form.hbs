<div class="ui fluid card">
  <div class="ui top attached label handle">Dropdown #{{model.orderNumber}} &nbsp;&nbsp; {{if model.defaultTrue "(Default Option)"}} <i class="resize vertical icon ui right floated"></i></div>
  <div class="content">
    <div class="description">
      {{#if isEditing}}
        <div class={{if errorMessage "ui error form" "ui form"}}>
          <div class="ui error message">
            <p>{{errors.title}}</p>
          </div>
          <div class={{if errors.title "field error required" "field required"}}>
            <label>Dropdown Title</label>
            {{one-way-input class="active" value=menuTitle maxlength="42" update=(action (mut menuTitle))}}
          </div>
          <div class="field">
            <label>Text</label>
            {{one-way-textarea value=text update=(action (mut text))}}
          </div>
          <button class="ui mini teal button" {{action 'saveDropdown'}}>Save</button>
          <button class="ui mini button" {{action 'cancelDropdown'}}>Cancel</button>
        </div>
      {{else}}
        <p><b>{{model.menuTitle}}</b></p>
        <p>{{model.text}}</p>
        <p class="ui right aligned"><a href='#' {{action 'setDefault'}}>Default</a> | <a href='#' {{action 'editDropdown'}}>Edit</a> |
          <a href='#' {{action 'deleteConfirm'}}>
            Delete</a>
        </p>
        {{#if deleteMessage}}
          <div class="ui message transition">
            <i class="close icon" {{action 'cancelDelete'}}></i>
            This will delete the dropdown option. Are you sure?<p><a href='#' {{action 'deleteDropdown'}}>Confirm Delete</a></p>
          </div>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>
